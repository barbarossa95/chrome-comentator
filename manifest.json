{
    "manifest_version": 2,
    "name": "Commentator",
    "version": "1.0.0",

    "description": "Commentator chrome extension",

    "background": {
        "scripts": [
            "lib/facebook-sdk.js",
            "lib/helpers.js",
            "lib/instagram.js",
            "lib/facebook.js",
            "background.js"
        ],
        "persistent": false
    },
    "content_security_policy": "script-src 'self' https://graph.facebook.com; object-src 'self'",
    "permissions": [
        "unlimitedStorage",
        "storage",
        "<all_urls>",
        "tabs"
    ],
    "options_page": "options.html",
    "browser_action": {
        "default_icon": "images/comment-off.png",
        "default_title": "Commentator extension"
    }
}